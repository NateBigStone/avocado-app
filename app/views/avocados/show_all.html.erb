<div class="container">
  <div class="row">
      <div class="col-md-12">
      <h3 class="headline margin-bottom-25 margin-top-65">All Avos</h3>
    </div>
  <!-- Content
================================================== -->
<div class="container">
  <div class="row fullwidth-layout">

    <div class="col-md-12">

      <!-- Sorting / Layout Switcher -->
      <div class="row margin-bottom-15">

        <div class="col-md-6">
          <!-- Sort by -->
          <div class="sort-by">

            <div class="sort-by-select">
              <select data-placeholder="Default order" class="chosen-select-no-single" >
                <option>Default Order</option>  
                <option>Price Low to High</option>
                <option>Price High to Low</option>
                <option>Newest Properties</option>
                <option>Oldest Properties</option>
              </select>
            </div>
          </div>
        </div>

        <div class="col-md-6">
          <!-- Layout Switcher -->
          <div class="layout-switcher">
            <a href="#" class="list"><i class="fa fa-th-list"></i></a>
            <a href="#" class="grid"><i class="fa fa-th-large"></i></a>
            <a href="#" class="grid-three"><i class="fa fa-th"></i></a>
          </div>
        </div>
      </div>

      
      <!-- Listings -->
      <div class="listings-container list-layout">


        <% @avocados.each do |avocado| %>


        <!-- Listing Item -->
        <div class="listing-item">

          <a href="#" class="listing-img-container">

            <div class="listing-badges">
              <span class="featured">Great Deal</span>
              <span><big><%="Organic" if avocado.organic %> <%=avocado.category%></big></span>
            </div>

            <div class="listing-img-content">
              <span class="listing-price"><%= number_to_currency(avocado.price)%> <i>each!</i></span>
            </div>

            <img src="/images/avocado-3.jpg" alt="">

          </a>
          
          <div class="listing-content">

            <div class="listing-title">
              <h4><a href="/?sort=<%=avocado.location_id%>&filter=location"><%=avocado.location.name%></a></h4>
               <a href="http://maps.google.com/?q=<%=avocado.location.lat%>,<%=avocado.location.lng%>" class="listing-address popup-gmaps">
                <i class="fa fa-map-marker"></i>
                <%=avocado.location.address%>
              </a>

              <a href="#" class="details button border">Button</a>
            </div>

            <ul class="listing-details">
              <li>Notes: <%=avocado.notes%></li>
            </ul>

            <div class="listing-footer">
                <a href="/?sort=<%=avocado.user.id%>&filter=user"><i class="fa fa-user"></i><%=avocado.user.name%></a>
                <span><i class="fa fa-calendar-o"></i><%=time_ago_in_words(avocado.created_at)%></span>
            </div>

          </div>

        </div>
        <!-- Listing Item / End -->
    <%end%>

      </div>
      <!-- Listings Container / End -->

      <div class="clearfix"></div>
      <!-- Pagination -->
      <div class="pagination-container margin-top-20">
        <nav class="pagination">
          <ul>
            <li><a href="#" class="current-page">1</a></li>
            <li><a href="#">2</a></li>
            <li><a href="#">3</a></li>
            <li class="blank">...</li>
            <li><a href="#">22</a></li>
          </ul>
        </nav>

        <nav class="pagination-next-prev">
          <ul>
            <li><a href="#" class="prev">Previous</a></li>
            <li><a href="#" class="next">Next</a></li>
          </ul>
        </nav>
      </div>
      <!-- Pagination / End -->

    </div>

  </div>
</div>
</div>
</div>
