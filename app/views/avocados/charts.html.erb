    $.ajax({
    type: "GET",
    url: "/avocados/json",
    dataType: "json",
    success: function(datas){
      for (data of datas) {
        chartData.push({name: data.location.name,
        color: `rgba(${(Math.floor(Math.random() * 80) + 50)}, ${(Math.floor(Math.random() * 130) + 100)}, 0, .8)`,
