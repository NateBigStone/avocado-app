      }
  Highcharts.chart('container', {
    chart: {
        type: 'scatter',
        zoomType: 'xy'
    },
    title: {
        text: 'Total User-Generated Avocado Price Data'
    },
    subtitle: {
        text: 'By Price Per Ounce (USD)'
    },
    xAxis: {
        title: {
            enabled: true,
            text: 'Date'
        },
        type: 'datetime',
        dateTimeLabelFormats: { // don't display the dummy year
            month: '%e. %b',
            year: '%b'
        },
        startOnTick: true,
        endOnTick: true,
        showLastLabel: true
    },
    yAxis: {
        title: {
            text: 'Price Per Ounce (USD)'
        }
    },
    legend: {
        enabled: false
    },
    credits: {
    enabled: false
    },
    plotOptions: {
        scatter: {
            marker: {
                symbol: 'circle',
                radius: 5,
                states: {
                    hover: {
                        enabled: true,
                        lineColor: 'rgb(100,100,100)'
                    }
                }
            },
            states: {
                hover: {
                    marker: {
                        enabled: false
                    }
                }
            },
            tooltip: {
                headerFormat: '<b>{series.name}</b><br>',
                pointFormat: '{point.x:%b %e}, {point.y} cents'
            }
        }
    },
    series: chartData
  
});     
    }
  }
